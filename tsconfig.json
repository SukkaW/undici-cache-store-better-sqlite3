{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "module": "node16",
    "moduleResolution": "node16",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
